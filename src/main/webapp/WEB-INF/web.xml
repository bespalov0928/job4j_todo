<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>IndexServelet</servlet-name>
    <servlet-class>ru.job4j.todo.controller.IndexServelet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexServelet</servlet-name>
    <url-pattern>/update.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CreateServelet</servlet-name>
    <servlet-class>ru.job4j.todo.controller.CreateServelet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateServelet</servlet-name>
    <url-pattern>/createItem.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EditServelet</servlet-name>
    <servlet-class>ru.job4j.todo.controller.EditServelet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditServelet</servlet-name>
    <url-pattern>/edit.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthServelet</servlet-name>
    <servlet-class>ru.job4j.todo.controller.AuthServelet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServelet</servlet-name>
    <url-pattern>/auth.do</url-pattern>
  </servlet-mapping>

</web-app>
